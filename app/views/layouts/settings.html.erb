<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>
      <%= page_title_with_notification %>
    </title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= timeago_script_tag %>
    <% if content_for? :head %>
      <%= yield :head %>
    <% end %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render :partial => 'layouts/topbar' %>
    <div id="main">
      <div class="container">
        <div class="row">
          <div class="span3" id="sidebar">
            <%= render :partial => 'shared/sidebar_profile' %>
            <ul class="nav nav-tabs nav-stacked" id="settings-nav">
              <li class="<%= (controller_name == 'accounts' ? 'active' : nil) %>">
                <%= link_to t('.account'), settings_account_path %>
              </li>
              <li class="<%= (controller_name == 'passwords' ? 'active' : nil) %>">
                <%= link_to t('.password'), settings_password_path %>
              </li>
              <li class="<%= (controller_name == 'profiles' ? 'active' : nil) %>">
                <%= link_to t('.profile'), settings_profile_path %>
              </li>
            </ul>
          </div>
          <div class="span9" id="mainbar">
            <section class="box" id="settings">
              <%= yield %>
            </section>
          </div>
        </div>
      </div>
    </div>
  </body>
  <%= render :partial => 'layouts/footer' %>
</html>
